{
  "compilerOptions": {
    "baseUrl": "./",
    "strict": true,
    "strictNullChecks": true,
    "module": "esnext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "target": "es6",
    "lib": ["dom", "es2017"],
    "skipLibCheck": true,
    "stripInternal": true,
    "resolvePackageJsonExports": true
  },
  "include": ["**/*"],
  "exclude": ["node_modules", "lib", "es"]
}
